#app
  height: 100%
  width: 100%
  background-color: #eee
iframe
  position absolute
  top 50%
  left: 50%
  transform translate(-50%, -50%)
  width: 600px
  height: 400px
  display block
  border: 1px solid #000
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
  padding: 10px
.out-box
  width: 600px
  margin 0 auto
  line-height: 40px
  position absolute
  top 0
  left: 30px
  transform translateY(-50%)

.btn
  border: 1px solid #000;
  padding: 4px 20px;
  margin: 0 10px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  cursor: pointer;

.main
  padding-top: 40px
  position absolute
  top 50%
  left: 50%
  width: 640px
  height: 500px
  box-sizing content-box
  transform translate(-50%, -50%)

